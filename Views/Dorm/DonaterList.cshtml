@model IEnumerable<Donater>

@if(Model.Count()>0)
{
    <h6 class="display-6">
        Donaters
    </h6>
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>TCKN</th>
                <th>FullName</th>
                <th>E-mail</th>
                <th>Price</th>
                <th>State</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Donater donater in Model)
            {
                <tr>
                    <td>@donater.TC</td>
                    <td>@donater.FullName</td>
                    <td>@donater.Email</td>
                    <td>@donater.Price</td>
                    <td>@donater.SelectedState</td>
                </tr>
            }
        </tbody>

    </table>

}
else
{
    <div class="alert alert-info">
        There is no donater.Please click here to
        <a class="alert-link" asp-action="Donate">donate.</a>
    </div>
}
