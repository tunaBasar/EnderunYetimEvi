@model Donater
<div class="display-6">Donate</div>

<form method="post" asp-action="Donate">
    <div class="form-group my-3">

        <label asp-for="TC"></label>
        <input asp-for="TC" class="form-control" />

    </div>
    <div class="form-group my-3">

        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />

    </div>
    <div class="form-group my-3">

        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />

    </div>
    <div class="form-group my-3">

        <label asp-for="Email">E-mail</label>
        <input asp-for="Email" class="form-control" />

    </div>
    <div class="form-group my-3">

        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />

    </div>
    <fieldset>
        <legend>Select One State</legend>
        <p>
            <input id="mvc" type="radio" asp-for="SelectedState" value="İzmir" />
            <label>İzmir</label>
        </p>
         <p>
            <input id="mvc" type="radio" asp-for="SelectedState" value="İstanbul" />
            <label>İstanbul</label>
        </p>
        <p>
            <input id="mvc" type="radio" asp-for="SelectedState" value="Ankara" />
            <label>Ankara</label>
        </p>
        <p>
            <input id="mvc" type="radio" asp-for="SelectedState" value="Antalya" />
            <label>Antalya</label>
        </p>

    </fieldset>
    <div>
        <button class="btn btn-primary" type="submit">Apply</button>
        <a class="btn btn-warning" asp-controller="Home" asp-action="Index" >Home</a>
    </div>
</form>
